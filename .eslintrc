{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "extends": "airbnb",
  "plugins": [
    "react",
    "jsx-a11y"
  ],
  "rules": {
    "semi": [
      2,
      "never"
    ],
    "arrow-body-style": [
      0,
      "never"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-console": 0,
    "class-methods-use-this": 0,
    "react/jsx-uses-vars": "error",
    "react/jsx-uses-react": "error",
    "react/no-array-index-key": 0,
    "react/require-default-props": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "jsx-a11y/anchor-is-valid": [
      "off",
      {
        "components": [
          "Link"
        ],
        "specialLink": [
          "to"
        ]
      }
    ]
  }
}